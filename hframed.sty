\RequirePackage[tikz]{mdframed}
\mdfsetup{
  leftmargin=1pt,
  rightmargin=1pt,
  innertopmargin=3pt,
  innerbottommargin=3pt,
  innerleftmargin=3pt,
  innerrightmargin=3pt
}

\mdfdefinestyle{boxed}{
  linecolor=framecolor,
}

\mdfdefinestyle{shaded}{
  linecolor=framecolor,
  backgroundcolor=shadecolor,
%  hidealllines=true
}

\mdfdefinestyle{theoremstyle}{
  frametitlefont={\hspace{-2em}\bf\color{textcolor}},
  frametitlerule=true,
  frametitleaboveskip=0pt,
  frametitlebelowskip=0pt,
  frametitlebackgroundcolor=frametitlecolor,
  linecolor=framecolor,
  backgroundcolor=shadecolor,
}

