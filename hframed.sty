%%%%%%%%%%%%%%%%%%%%%%%%%%%%% 自定义宏 %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newenvironment{Shaded}
{\begin{mdframed}[style=shaded]}
{\end{mdframed}}

\newenvironment{Boxed}
{\begin{mdframed}[style=boxed]}
{\end{mdframed}}